# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# APIs in EmployeeController
GET    /employee/list               controllers.EmployeeController.listEmployees()
GET     /employee/:id               controllers.EmployeeController.retrieve(id:Int)
POST    /employee/add               controllers.EmployeeController.create(request:Request)
PUT     /employee/update            controllers.EmployeeController.update(request:Request)
DELETE  /employee/delete/:id        controllers.EmployeeController.delete(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
